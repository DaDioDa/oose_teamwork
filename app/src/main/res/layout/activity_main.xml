<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

<!--    <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/underline"-->
<!--    />-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.3"
    android:background="@drawable/leftline">

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.15"/>
        <!--桌號-->
        <TextView
                android:id="@+id/tableNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A4"
                android:textSize="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
        />
        <!--訂單編號-->
        <TextView
                android:id="@+id/orderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="order num："
                android:textSize="20dp"

                android:layout_marginRight="110dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="@id/guide1"
                app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:id="@+id/orderNumId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textSize="20dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="@id/guide1"
                app:layout_constraintRight_toRightOf="parent"/>
        <!--已出單-->
        <TextView
                android:id="@+id/already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="．已出單"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/guide1"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <!--已出單內容框-->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/already"
                app:layout_constraintLeft_toLeftOf="@id/aa"
                app:layout_constraintWidth_percent="0.2"
                android:layout_marginLeft="70dp"
        >
            <TextView
                    android:id="@+id/meatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="唐揚雞義大利麵"
                    android:textSize="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="@id/bb"
                    app:layout_constraintLeft_toLeftOf="parent"
            />
            <TextView
                    android:id="@+id/sauceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="青醬X2"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/meatName"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                    android:id="@+id/meatCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintLeft_toRightOf="@id/meatName"
                    app:layout_constraintTop_toTopOf="@id/bb"/>
            <TextView
                    android:id="@+id/meatPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$360"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="155dp"
                    app:layout_constraintLeft_toRightOf="@id/sauceName"
                    app:layout_constraintTop_toBottomOf="@id/meatCount"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/guide2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bb"
                android:layout_marginLeft="1dp"
                android:background="@drawable/underline"/>
        <!--未出單-->
        <TextView
                android:id="@+id/Notyet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="．未出單"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/guide2"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <!--為出單內容框-->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Notyet"
                app:layout_constraintLeft_toLeftOf="@id/aa"
                app:layout_constraintWidth_percent="0.2"
                android:layout_marginLeft="70dp"
        >
            <TextView
                    android:id="@+id/NYmeatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="唐揚雞義大利麵"
                    android:textSize="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="@id/cc"
                    app:layout_constraintLeft_toLeftOf="parent"
            />
            <TextView
                    android:id="@+id/NYmeatCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintLeft_toRightOf="@id/NYmeatName"
                    app:layout_constraintTop_toTopOf="@id/cc"/>
            <TextView
                    android:id="@+id/NYmeatPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$360"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="235dp"
                    app:layout_constraintLeft_toLeftOf="@id/cc"
                    app:layout_constraintTop_toBottomOf="@id/NYmeatCount"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@id/aa"
                app:layout_constraintLeft_toLeftOf="@id/aa"
                app:layout_constraintWidth_percent="0.2">
            <!--出單按鈕-->
                <Button
                        android:id="@+id/summit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出單"
                        android:textSize="25dp"
                        android:backgroundTint="@color/green"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="@id/dd"
                        app:layout_constraintLeft_toLeftOf="@id/dd"
                />
            <!--結帳按鈕-->
                <Button
                        android:id="@+id/checkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="結帳"
                        android:textSize="25dp"
                        android:backgroundTint="@color/yellow"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="140dp"
                        app:layout_constraintBottom_toBottomOf="@id/dd"
                        app:layout_constraintLeft_toRightOf="@id/summit"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

<!--主畫面左上半邊(主列別選單)-->
主</androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
            android:id="@+id/meal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.15"
            android:background="@drawable/underline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        <!--<com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main"
        />
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soup"
        />
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dessert"
        />
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drinks"
        />-->
    </com.google.android.material.tabs.TabLayout>
    <!--餐點選項顯示框-->
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/meal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/aa"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>


