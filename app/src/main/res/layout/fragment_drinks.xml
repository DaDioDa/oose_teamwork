<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.38"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.71"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.00"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>
    <!--第一行-->
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="拿鐵 $50"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver1"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="香柚冰茶 $60"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="纖盈香草茶 $60"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver3"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="熱帶水果茶 $60"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver4"/>

    <!--第二行-->
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="焦糖瑪奇朵 $60"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver1"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="伯爵茶那堤 $60"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="水果氣泡飲 $60"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver3"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="紅茶雲奶霜 $65"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver4"/>

    <!--第三行-->
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="法芙娜可可歐雷 $65"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor3"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver1"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="抹茶那堤 $75"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor3"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="玫瑰蜜香茶那堤 $75"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor3"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver3"/>


</androidx.constraintlayout.widget.ConstraintLayout>


