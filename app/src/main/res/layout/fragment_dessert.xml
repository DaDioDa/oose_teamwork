<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.38"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.71"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.00"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>
    <!--第一行-->
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="藍莓塔 $50"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver1"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="法式千層 $50"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="野莓乳酪蛋糕 $50"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver3"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="義式冰淇淋 $65"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver4"/>

    <!--第二行-->
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="檸檬乳酪塔 $65"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver1"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="經典提拉米蘇 $65"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="聖米歇爾蘋果塔 $65"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver3"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="草莓奶酪 $80"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver4"/>

    <!--第三行-->
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="蜜糖鬆餅 $85"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor3"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver1"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="珍奶舒芙蕾鬆餅 $90"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor3"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="玫瑰仙子舒芙蕾 $110"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor3"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver3"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.3:1"
            android:text="檸檬玫瑰舒芙蕾 $110"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor3"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver4"/>


</androidx.constraintlayout.widget.ConstraintLayout>


