<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.38"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.00"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.5:1"
            android:text="玉米巧達濃湯 $50"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver1"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.5:1"
            android:text="杏鮑菇南瓜濃湯 $50"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.5:1"
            android:text="牛肉蔬菜湯 $60"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver3"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintDimensionRatio="1.5:1"
            android:text="義式海鮮清湯 $60"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver4"/>
</androidx.constraintlayout.widget.ConstraintLayout>



